{
    "compilerOptions": {
      "baseUrl": "./",
      "module": "ESNext",
      "target": "ESNext",
      "allowJs": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "lib": [
        "ESNext"
      ],
      "moduleResolution": "Node",
      "noImplicitAny": true,
      "outDir": "./public/",
      "removeComments": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "allowImportingTsExtensions": false
    },
    "ts-node": {
      "moduleTypes": {
        "*": "cjs"
      }
    },
    "exclude": [
      "node_modules",
      "test",
      "dist",
      "public",
      "**/*spec.ts"
    ]
  }
  